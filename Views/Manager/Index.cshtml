@{
}

@model List<Managers>

<a asp-controller="Manager" asp-action="AddManager" class="btn btn-info">Add Emp</a>
<br />
<br>


<table class="table" id="mytables">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Dept</th>

            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.Mid</th>
                <td>@d.Mname</td>
                <td>@d.Dname</td>
                
                <td>
                    <a class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this record?')" asp-controller="Employee" asp-action="DeleteEmp" asp-route-id="@d.Mid">Delete</a>
                    <a class="btn btn-sm btn-success" asp-controller="Employee" asp-action="EditEmp" asp-route-id="@d.Mid">Edit</a>
                </td>
            </tr>
        }


    </tbody>
</table>