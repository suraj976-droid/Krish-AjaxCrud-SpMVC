@{
}
@model Emp

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="eid">
    Name <input type="text" asp-for="ename" class="form-control" />
    <span asp-validation-for="ename" class="text-danger"></span><br />

    Email<input type="text" asp-for="email" class="form-control" />
    <span asp-validation-for="email" class="text-danger"></span><br />

    Salary<input type="text" asp-for="esalary" class="form-control" />
    <span asp-validation-for="esalary" class="text-danger"></span><br />


    Profile <input type="file" name="eimg" class="form-control" /><br />
    <img src="/@Model.eimg" height="50" width="50"/>
    @Model.eimg
    <input type="submit" value="Save" class="btn btn-primary" />
</form>